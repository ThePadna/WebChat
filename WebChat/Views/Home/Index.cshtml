@model IEnumerable<WebChat.Models.UserModel>
<form id="login">
    <label for="uname"><b></b></label>
    <input type="text" placeholder="Enter Username..." name="uname" />
    <label for="pswrd"><b></b></label>
    <input type="text" placeholder="Enter Password..." name="pswrd" />
    <button type="submit">Login</button>
    <a href=""> <p id="no_account">Don't have an account?</p> </a>
</form>
<link rel="stylesheet" type="text/css" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<div class="center_horizontally">
    <p id="title">Chat</p>
</div>
<div id="chat_container" class="center_horizontally">
    <div id="chat_box">
        <ul id="messages"></ul>
    </div>
</div>
<div id="input_container" class="center_horizontally">
    <input id="input_box" type="text" />
</div>
<div id="members" class="center_horizontally">
    @{
        foreach (var item in Model)
        {
            @:<p id=@item.Id>@item.Id</p>
        }
    }
</div>
    <script>
        @{
            foreach (var item in Model)
            {
                @:var id = "@item.Id";
                @:var colour = "@item.Colour";
                @:$(("#" + id)).css("color", colour);
            }
        }
    </script>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>